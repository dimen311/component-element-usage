{
  "name": "angularComponentElementUsage",
  "displayName": "Angular component usage finder",
  "description": "quickly find the usage of Angular components within your project's HTML templates",
  "version": "0.3.0",
  "publisher": "ExtensionDmn",
  "icon": "logo.png",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "html",
    "angular"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dimen311/component-element-usage.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "component_element_usage.findComponentUsage",
          "group": "0_navigation@3",
          "when": "editorLangId == 'typescript' || editorLangId == 'html'"
        }
      ]
    },
    "commands": [
      {
        "command": "component_element_usage.findComponentUsage",
        "title": "Find Component Usages"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "elementUsageExplorer",
          "name": "Element usage explorer"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/glob": "^8.1.0",
    "glob": "^11.0.0"
  },
  "overrides": {
    "cross-spawn": "7.0.5"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn": "7.0.5"
    }
  }
}